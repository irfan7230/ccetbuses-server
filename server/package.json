{
  "name": "sundhara-travels-server",
  "version": "1.0.0",
  "description": "Backend server for Sundhara Travels - College Bus Tracking App",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "create-driver": "ts-node scripts/createDriver.ts",
    "create-admin": "ts-node scripts/createAdmin.ts",
    "seed-bus-route": "ts-node scripts/seedExistingBusRoute.ts",
    "sync-users": "ts-node scripts/syncAuthToFirestore.ts",
    "setup": "npm run create-admin && npm run create-driver && npm run seed-bus-route"
  },
  "keywords": [
    "bus-tracking",
    "real-time",
    "socket.io",
    "express"
  ],
  "author": "Sundhara Travels Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "firebase-admin": "^12.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "cloudinary": "^2.0.1",
    "multer": "^1.4.5-lts.1",
    "express-validator": "^7.0.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "geolib": "^3.3.4",
    "winston": "^3.11.0",
    "express-rate-limit": "^7.1.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.0",
    "@types/node-cron": "^3.0.11",
    "nodemon": "^3.0.3",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "prettier": "^3.2.4",
    "eslint": "^8.56.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
